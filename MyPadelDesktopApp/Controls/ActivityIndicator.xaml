<?xml version="1.0" encoding="utf-8" ?>
<Grid xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
      xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
      x:Class="MyPadelDesktopApp.Controls.ActivityIndicator"
      x:Name="loader"
      IsVisible="False"
      VerticalOptions="FillAndExpand"
      HorizontalOptions="FillAndExpand"
      RowDefinitions="*">

    <Frame Grid.Row="0" IsEnabled="False" VerticalOptions="FillAndExpand" HorizontalOptions="FillAndExpand" BackgroundColor="Gray" BorderColor="Transparent" Opacity="0.4"></Frame>
    <ActivityIndicator Color="White" VerticalOptions="Center" HorizontalOptions="Center" HeightRequest="70" WidthRequest="70" IsRunning="True" IsVisible="True"/>
</Grid>